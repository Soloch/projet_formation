<% include ./partials/headadmin %>
<title><%= title %></title>
</head>
<% include ./partials/adminside %>
  <div class="col-sm-9 col-xs-9 col-lg-10">
    <h1><%= title%></h1>

      <table class="table table-hover">
        <thead>
          <tr>
            <th>Titre Article</th>
            <th>Contenu</th>
          </tr>
        </thead>
        <tbody>
          <% if (articles !== "undefined") { %>
            <% articles.forEach(function(article) { %>
              <tr id="<%= article._id %>">
                <td class="user-lastName"><%= article.articletitle %></td>
                <td class="user-firstName"><%- article.contentarticle %></td>

                <td>
                  <a class="btn btn-primary" href="/admin/articles/edit/<%= article._id %>"><i class="fa fa-pencil-alt"></i></a>
                  <a class="btn btn-danger" href="/admin/articles/delete/<%= article._id %>"><i class="fa fa-trash-alt"></i></a>
                </td>
              </tr>
            <% }); %>
          <% } %>
        </tbody>
      </table>
  </div>
