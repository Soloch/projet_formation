<% include ./partials/head %>
<title><%= title %></title>
</head
<% include ./partials/navbar %>

    <h1><%= title%></h1>

    <form id="usersForm" action="#" method="POST" enctype="multipart/form-data">
      <table class="table table-hover">
        <thead>
          <tr>
            <th>Nom</th>
            <th>Pr√©nom</th>
            <th>E-mail</th>
            <th>Role</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% if (users !== "undefined") { %>
            <% users.forEach(function(user) { %>
              <tr id="<%= user._id %>">
                <td class="user-lastName"><%= user.lastName %></td>
                <td class="user-firstName"><%= user.firstName %></td>
                <td class="user-email"><%= user.email %></td>
                <td class="user-role"><%= user.role %></td>
                <td>
                  <a class="btn btn-primary" href="/admin/user/edit/<%= user._id %>"><i class="fa fa-pencil-square-o"></i></a>
                  <a class="btn btn-danger" href="/admin/users/delete/<%= user._id %>"><i class="fa fa-trash-o"></i></a>
                </td>
              </tr>
            <% }); %>
          <% } %>
        </tbody>
      </table>
        <label for="photo">Photo</label>
        <input type="file" name="photo" id="photo">
        <button type="submit">Enregistrer photo</button>
    </form>
    

<% include ./partials/footer %>