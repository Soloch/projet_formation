<% include ./partials/headadmin %>
<title><%= title %></title>
</head>
<% include ./partials/adminside %>
  <div class="col-sm-9 col-xs-9 col-lg-10">
    <h1><%= title%></h1>

      <table class="table table-hover">
        <thead>
          <tr>
            <th>Nom</th>
            <th>Pr√©nom</th>
            <th>E-mail</th>
            <th>Role</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% if (users !== "undefined") { %>
            <% users.forEach(function(user) { %>
              <tr id="<%= user._id %>">
                <td class="user-lastName"><%= user.lastName %></td>
                <td class="user-firstName"><%= user.firstName %></td>
                <td class="user-email"><%= user.email %></td>
                <td class="user-role"><%= user.role %></td>
                <td>
                  <a class="btn btn-primary" href="/admin/user/edit/<%= user._id %>"><i class="fa fa-pencil-alt"></i></a>
                  <a class="btn btn-danger" href="/admin/users/delete/<%= user._id %>"><i class="fa fa-trash-alt"></i></a>
                </td>
              </tr>
            <% }); %>
          <% } %>
        </tbody>
      </table>
  </div>
    

