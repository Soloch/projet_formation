<% include ./partials/headadmin %>
<title><%= title %></title>
</head>
<% include ./partials/adminside %>
  <div class="col-sm-9 col-xs-9 col-lg-10">
    <h1><%= title %> pour <%= article.articletitle %> </h1>

    <form id="formulaire_edition" action="/admin/articles/edit/<%= article.id %>" class="inscription" method="POST">
      <div class="form-group">
        <label for="articletitle">Titre</label>
        <input type="text" class="form-control" id="articletitle" name="articletitle" placeholder="Nom" value="<%= article.articletitle %>">
      </div>

      <div class="form-group">
        <label for="contentarticle">Contenu</label>
        <textarea name="contentarticle" id="contentarticle" ><%= article.contentarticle %></textarea>

      </div>

      <div class="text-center">
        <input class="btninscription" type="submit" name="Confirmer" value="Confirmer">
      </div>
    </form>
  </div>

  <script src="/js/tinymce/tinymce.min.js"></script>
    <script>tinymce.init({ selector:'#contentarticle',
  skin: 'custom' ,
  language: 'fr_FR',
  language_url: '/js/tinymce/langs/fr_FR.js',
  plugins: "media image insertdatetime table",
  menubar: "insert",


  });

  tinymce.activeEditor.uploadImages(function(success) {
    $.post('/image', tinymce.activeEditor.getContent()).done(function() {
      console.log("Image post√© en Ajax");
    });
  });</script>
